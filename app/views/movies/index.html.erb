
<div class="col-xs-offset-2 col-xs-7 movie_index">
  <h4 class="text-center movie_index">映画一覧</h4>
  <!-- col-xs-9の中を更に4等分する -->
  <div class="row">
    <% @movies.each do |movie| %>
    <div class="col-xs-4 movie-image">
      <%= image_tag movie.image_id_url(:thumb) if movie.image_id.present? %><br>
      <%= link_to movie.title.truncate(16), movie_path(movie) %>
    </div>
    <% end %>
  </div>
